uniform mat4 ProjectionMatrix, CameraMatrix, ModelMatrix;
in vec4  Position;
in vec2  TexCoord;
out vec2 vTexCoord;

uniform mat4 MeshMat;
uniform mat4 BoneMat[64];
in ivec4 BoneId;
in  vec4 BoneWt;

float delta = 0.001;

bool VecEq4(vec4 a, vec4 b) {
    return distance(a, b) < delta;
}

