====== fsBone @@@@@@
uniform sampler2D TexUnit;
in vec2 vTexCoord;
out vec4 fragColor;

void main(void) {
    vec4 t = texture(TexUnit, vTexCoord);
    fragColor = vec4(1.0, t.gb, 1.0);
}
